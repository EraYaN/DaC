<Window x:Class="SRAMDebugTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:SRAMDebugTool"
        Title="SRAMDebugTool" Height="311" Width="364">
	<Grid>
		<Border BorderThickness="1" BorderBrush="Black" Margin="10,10,90,35">
			<Image x:Name="MemoryMapImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" MouseMove="MemoryMapImage_MouseMove"/>
		</Border>
		<StackPanel x:Name="ColorStack" Margin="0,10,10,35" HorizontalAlignment="Right" Width="75">
			
		</StackPanel>
		<Button x:Name="readButton" Content="Read" HorizontalAlignment="Left" Margin="90,0,0,10" Width="75" Height="20" VerticalAlignment="Bottom" Click="readButton_Click"/>
		<Button x:Name="writeButton" Content="Write" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="20" VerticalAlignment="Bottom" Click="writeButton_Click"/>
	</Grid>
</Window>
